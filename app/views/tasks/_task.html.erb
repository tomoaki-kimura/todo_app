<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= task.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= task.end_time %>
